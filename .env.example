# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=your_database_name
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_SSL_ENABLED=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=86400

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Data Encryption (optional)
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ENABLED=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=
REDIS_DB=0
BULL_DASHBOARD_PORT=3001

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@yourapp.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Test Environment Rate Limiting
TEST_RATE_LIMIT_WINDOW_MS=1000
TEST_RATE_LIMIT_MAX=10

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=*

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# =============================================================================
# SYNC & BACKGROUND JOBS
# =============================================================================
SYNC_INTERVAL_HOURS=6

# =============================================================================
# THIRD-PARTY API CONFIGURATION
# =============================================================================
PRODUCTS_API_URL=https://api.yourvendor.com/products
API_USER_NAME=your_api_username
API_PASSWORD=your_api_password
PRODUCT_SYNC_INTERVAL=3600
